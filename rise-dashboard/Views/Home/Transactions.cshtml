@using rise.Models

@{
    ViewData["Title"] = AppSettingsProvider.CoinName + " Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<title>@(AppSettingsProvider.CoinName) Dashboard</title>

@section Scripts
    {
    <script type="text/javascript">
        @if (@ViewBag.address == "")
        {
            <text>
            $('#TransactionsTable').load('@Url.Action("TransactionsTablePartialView", "Home")');
            </text>
        }
        else
        {
            <text>
            $('#TransactionsTable').load('@Url.Action("TransactionsTablePartialView", "Home", new { address = @ViewBag.address })');
            </text>
        }
    </script>
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1><img src="@Url.Content("~/img/"+ AppSettingsProvider.CoinName.ToLower() + ".png")" alt="@(AppSettingsProvider.CoinName) Logo" class="brand-image img-circle elevation-3" style="opacity: .8" />@(AppSettingsProvider.CoinName) Dashboard</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Transactions</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <section class="content">
        <div id="TransactionsTable"></div>
    </section>
</div>
<!-- /.content-wrapper -->

<br />